<div class="container-fluid">
  <div class="container">
    <div class="show-center">
      <h2> <%= @duck.name %></h2>
      <% if @duck.photo.attached? %>
        <%= cl_image_tag @duck.photo.key %>
      <% end %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <p> Category:<%= @duck.category %></p>
        <p> Description:<%= @duck.description %></p>
      </div>
      <div class="col">
        <% @duck.bookings.each do |booking| %>
          <p> <%= booking.date %></p>
        <% end %>
        <%= simple_form_for ([@duck, @booking]) do |form| %>
          <%= form.input :date %>
          <%= form.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>

