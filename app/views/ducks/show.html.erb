<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="duck-infos col-md-8">
        <div class="info-title">
          <% if @duck.photo.attached? %>
            <%= cl_image_tag @duck.photo.key %>
          <% end %>
          <div class="info-details">
            <h2> <%= @duck.name %></h2>
            <p> Category:<%= @duck.category %></p>
            <p> Description:<%= @duck.description %></p>
          </div>
        </div>
      </div>
      <div class="card-status col-md-4">
        <div class="card-booking">
          <% if policy(@duck).update? %>
            <%= link_to "edit", edit_duck_path(@duck) %>
            <%= button_to "delete", duck_path(@duck), method: :delete  %>
          <% else %>
            <p id="price">Start from $50 per day</p>
            <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
              Book duck
            </a>
            <div class="collapse" id="collapseExample">
              <div class="card card-body">
                <%= simple_form_for [@duck, @booking] do |f| %>
                  <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
                  <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
                  <%= f.button :submit, "Submit", class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
