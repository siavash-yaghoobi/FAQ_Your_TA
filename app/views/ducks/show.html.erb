<html>
<head>

</head>

<body>
  <div class="container">
    <div class="name">
      <h2> <%= @duck.name %></h2>
    </div>
   <!--  <div class="card-duck"> -->
      <% if @duck.photo.attached? %>
        <%= cl_image_tag @duck.photo.key %>
      <% end %>
<!--     </div> -->
  </div>
  <div class="column-container">
    <div class="row">
      <div class="column">
        <div class="card-infos">
          <p> <%= @duck.category %></p>
          <p><%= @duck.description %></p>
        </div>
      </div>
      <div class="column">
        <div class="card-booking">
          <% @duck.bookings.each do |booking| %>
            <p> <%= booking.date %></p>
          <% end %>
          <%= simple_form_for ([@duck, @booking]) do |form| %>
            <%= form.input :date %>
            <%= form.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
