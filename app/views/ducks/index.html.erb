<% @ducks.each do |duck| %>
  <h1>duck.name</h1>
  <h2>duck.category</h2>
  <p>duck.description</p>
<% end %>


<div class="container">
  <div class="flexing-center height-search">
    <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :category, input_html: {value: ""} %>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
