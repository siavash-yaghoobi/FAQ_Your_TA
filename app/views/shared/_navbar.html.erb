<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="/">
    <%= image_tag "http://pngimg.com/uploads/duck/duck_PNG5032.png" %>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <a class="nav-link" href="#">Messages</a>
        </li>
        <li class="nav-item">
          <%= link_to('See my listings', listings_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <%= link_to('My Bookings', bookings_path, class: "nav-link") %>
        </li>
        <li class="nav-item">
          <%= link_to('Create a Duck', new_duck_path, class: "nav-link") %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.username.present? %>
            <%= current_user.username %>
          <% else %>
            <%= current_user.email %>
          <% end %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="http://pngimg.com/uploads/duck/duck_PNG5022.png" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= button_to('Edit Profile', edit_user_registration_path,:method => :get, class: "dropdown-item") %>
            <%= button_to('Logout', destroy_user_session_path,:method => :delete, class: "dropdown-item") %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to('Signup', new_user_registration_path, class: "nav-link") %>
        </li>
        <li class="nav-item active">
          <%= link_to('Login', new_user_session_path, class: "nav-link") %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
